<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="267.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Media.RootController">

   <children>
   
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="217.0" prefWidth="270.0">
         <children>
            <Label prefHeight="26.0" prefWidth="70.0" text="ID" />
            <TextField fx:id="idField" prefHeight="25.0" prefWidth="220.0" />
            <Label prefHeight="26.0" prefWidth="101.0" text="PassWord" />
            <PasswordField fx:id="passwordField" />
            <Label prefHeight="26.0" prefWidth="70.0" text="NicName" />
            <TextField fx:id="nicnameField" prefHeight="25.0" prefWidth="213.0" />
            <Label prefHeight="26.0" prefWidth="101.0" text="Mail Address" />
            <TextField fx:id="addressField" prefHeight="25.0" prefWidth="270.0" />
         </children>
      </VBox>
      
      <HBox layoutX="14.0" layoutY="238.0" prefHeight="26.0" prefWidth="270.0" spacing="20.0">
         <children>
            <Button fx:id="btnSignUp" mnemonicParsing="false" text="SAND" onAction="#handleSignup">
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnSignUpCancle" mnemonicParsing="false" text="CANCLE" />
         </children>
      </HBox>
      
   </children>
</AnchorPane>
